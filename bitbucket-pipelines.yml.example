image: dchevell/docker-release-maker:latest
clone:
  depth: full

# pipelines example for Bitbucket Server 5
pipelines:
  custom:
    create-release:
      - step:
          script:
            - git remote set-url origin ${BITBUCKET_GIT_HTTP_ORIGIN}
            - git fetch --all
            - export BASE_BRANCH=base/5
            - export BASE_VERSION=5
            - export DOCKER_REPO=atlassian/bitbucket-server
            - export DOCKERFILE_VERSION_STRING=BITBUCKET_VERSION
            - export MAC_PRODUCT_KEY=bitbucket
            - export TAG_SUFFIX=ubuntu-16.04-adoptopenjdk8
            - export SHOULD_CREATE_LATEST_TAG=true
            - python /usr/src/app/create_release.py
  branches:
    base5:
      - step:
          script:
            - git remote set-url origin ${BITBUCKET_GIT_HTTP_ORIGIN}
            - git fetch --all
            - export BASE_BRANCH=base/5
            - export BASE_VERSION=5
            - export DOCKER_REPO=atlassian/bitbucket-server
            - export DOCKERFILE_VERSION_STRING=BITBUCKET_VERSION
            - export MAC_PRODUCT_KEY=bitbucket
            - export TAG_SUFFIX=ubuntu-16.04-adoptopenjdk8
            - export SHOULD_CREATE_LATEST_TAG=false
            - python /usr/src/app/update_release.py